rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ========= Helper Functions ========= */

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'zorbyteofficial@gmail.com' ||
        request.auth.token.email == 'briston.miller@weatherfordisd.net'
      );
    }

    /* ========= Users ========= */

    match /users/{userId} {
      // Users can read their own profile
      allow read: if isSignedIn() && request.auth.uid == userId;

      // Users can update their profile (except tokens)
      allow update: if isSignedIn() && request.auth.uid == userId
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['tokens']));

      // Only admins can modify tokens directly (normal users get tokens via cloud functions)
      allow update: if isAdmin();

      // Platform admins can manage all users
      allow read, write, delete: if isAdmin();

      // User's games played subcollection
      match /gamesPlayed/{gameId} {
        // Users can manage their own game history
        allow read, write: if isSignedIn() && request.auth.uid == userId;

        // Admins can read all
        allow read: if isAdmin();
      }

      // User's lessons subcollection (existing math platform)
      match /lessons/{lessonId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        allow read: if isAdmin();
      }

      // User's game saves subcollection (cross-device sync)
      match /gameSaves/{gameId} {
        // Users can manage their own game saves
        allow read, write: if isSignedIn() && request.auth.uid == userId;

        // Admins can read all
        allow read: if isAdmin();
      }

      // User's adaptive test states (in-progress tests)
      match /test-states/{subject} {
        // Users can manage their own test states
        allow read, write: if isSignedIn() && request.auth.uid == userId;

        // Admins can read all
        allow read: if isAdmin();
      }

      // User's completed adaptive tests
      match /adaptive-tests/{testId} {
        // Users can read and write their own test results
        allow read, write: if isSignedIn() && request.auth.uid == userId;

        // Admins can read all
        allow read: if isAdmin();
      }
    }

    /* ========= Schools ========= */

    match /schools/{schoolId} {

      // Any authenticated user can create a school
      allow create: if isSignedIn();

      // Read permissions
      allow read: if isSignedIn() && (
        resource.data.owner == request.auth.uid ||
        request.auth.uid in resource.data.members ||
        resource.data.visibility == 'public' ||
        isAdmin()
      );

      // Update permissions
      allow update: if isSignedIn() && (
        resource.data.owner == request.auth.uid ||
        request.auth.uid in resource.data.admins ||
        isAdmin()
      );

      // Delete permissions
      allow delete: if isSignedIn() && (
        resource.data.owner == request.auth.uid ||
        isAdmin()
      );
    }

    /* ========= Student Accounts ========= */

    match /studentAccounts/{studentId} {

      // School staff can create student accounts
      allow create: if isSignedIn();

      /*
        Public read is allowed for student login lookup.
        IMPORTANT: This means only non-sensitive fields should exist here.
      */
      allow read: if true;

      // Only creator or platform admin can modify
      allow update, delete: if isSignedIn() && (
        request.auth.uid == resource.data.createdBy ||
        isAdmin()
      );
    }

    /* ========= Games ========= */

    match /games/{gameId} {
      // Anyone can read published games
      allow read: if resource == null || resource.data.published == true;

      // Admin can read all games (including unpublished)
      allow read: if isAdmin();

      // Only admin can create, update, or delete games
      allow create, update, delete: if isAdmin();
    }

    /* ========= Game Metadata ========= */

    match /gameMetadata/{docId} {
      // Anyone can read metadata (categories, etc.)
      allow read: if true;

      // Only admin can modify metadata
      allow create, update, delete: if isAdmin();
    }

    /* ========= Announcements ========= */

    match /announcements/{announcementId} {
      // Anyone can read announcements (for public display)
      allow read: if true;

      // Only admin can create, update, or delete announcements
      allow create, update, delete: if isAdmin();
    }

    /* ========= Ome-Chat ========= */
    // Anonymous random video/text chat system
    // No authentication required - uses session-based IDs

    match /omechat/data {
      // Allow reading the data document itself
      allow read: if true;

      // Sessions - anonymous users manage their own sessions
      match /sessions/{sessionId} {
        // Anyone can create, read, update, delete sessions
        // (Session-based auth, not Firebase auth)
        allow create, read, update, delete: if true;
      }

      // Matching Queue - users waiting for matches
      match /matchingQueue/{sessionId} {
        allow create, read, update, delete: if true;
      }

      // Chat Rooms - active video/text chat sessions
      match /rooms/{roomId} {
        // Anyone can create and manage rooms
        allow create, read, update, delete: if true;

        // Messages subcollection for text chat
        match /messages/{messageId} {
          allow create, read: if true;
        }

        // ICE Candidates subcollection for WebRTC signaling
        match /candidates/{candidateId} {
          allow create, read: if true;
        }
      }

      // Moderation - ban and report tracking
      match /moderation/{sessionId} {
        // Allow creating and updating moderation records
        // (for bans and reports)
        allow create, read, update: if true;
      }
    }

    /* ========= G-Chat ========= */
    // Discord-inspired community platform with standalone authentication
    // Uses custom tokens generated by Cloud Functions for session-based auth

    match /gchat {
      allow read: if true; // Allow reading the parent document

      // Helper functions for G-Chat
      function hasValidGChatSession() {
        return isSignedIn() &&
          request.auth.token.sessionId != null &&
          exists(/databases/$(database)/documents/gchat/sessions/active/$(request.auth.token.sessionId));
      }

      function getGChatUserId() {
        return request.auth.uid;
      }

      function isGChatAdmin() {
        return hasValidGChatSession() &&
          get(/databases/$(database)/documents/gchat/accounts/users/$(request.auth.token.username)).data.isAdmin == true;
      }

      function isServerOwner(serverId) {
        return hasValidGChatSession() &&
          get(/databases/$(database)/documents/gchat/servers/list/$(serverId)).data.ownerId == getGChatUserId();
      }

      function isServerMember(serverId) {
        return hasValidGChatSession() &&
          getGChatUserId() in get(/databases/$(database)/documents/gchat/servers/list/$(serverId)).data.members;
      }

      // Accounts - username/password hashes (NEVER exposed to client)
      match /accounts/users/{username} {
        allow read: if false; // Never allow reading password hashes
        allow create, update, delete: if false; // Only via Cloud Functions
      }

      // Sessions - active login sessions
      match /sessions/active/{sessionId} {
        allow read: if isSignedIn() && request.auth.token.sessionId == sessionId;
        allow create, update: if false; // Only via Cloud Functions
        allow delete: if isSignedIn() && request.auth.token.sessionId == sessionId; // Logout
      }

      // Profiles - public user profiles
      match /profiles/users/{userId} {
        allow read: if true; // Public profiles
        allow write: if hasValidGChatSession() && getGChatUserId() == userId;
        allow update: if isGChatAdmin(); // Admin moderation
      }

      // Servers
      match /servers/list/{serverId} {
        allow read: if true; // Public server discovery
        allow create: if hasValidGChatSession();
        allow update, delete: if isServerOwner(serverId) || isGChatAdmin();

        // Channels
        match /channels/{channelId} {
          allow read: if true;
          allow create, update, delete: if isServerOwner(serverId) || isGChatAdmin();

          // Messages
          match /messages/{messageId} {
            allow read: if true;
            allow create: if hasValidGChatSession() && isServerMember(serverId);
            allow delete: if isServerOwner(serverId) || isGChatAdmin();
          }
        }
      }

      // Server Members
      match /server-members/{serverId}/members/{userId} {
        allow read: if true;
        allow create: if hasValidGChatSession() && getGChatUserId() == userId;
        allow update: if isServerOwner(serverId) || isGChatAdmin();
        allow delete: if hasValidGChatSession() && (
          getGChatUserId() == userId ||
          isServerOwner(serverId) ||
          isGChatAdmin()
        );
      }

      // Featured Requests
      match /featured-requests/pending/{requestId} {
        allow create: if hasValidGChatSession();
        allow read, update: if isGChatAdmin();
      }

      // Voice Sessions
      match /voice-sessions/active/{sessionId} {
        allow read, write: if hasValidGChatSession();

        // Signaling subcollection for WebRTC
        match /signaling/{signalId} {
          allow read, write: if hasValidGChatSession();
        }
      }
    }

    /* ========= Bug Reports ========= */
    // Anyone can create a report (no auth needed â€” same as Ome-Chat).
    // Only admins can read or update (e.g. mark resolved).

    match /bugReports/{reportId} {
      allow create: if true;
      allow read, update: if isAdmin();
    }

    /* ========= Default Deny ========= */
    // Removed catch-all rule to prevent interference with specific permissions
    // Firestore denies by default if no rule matches
  }
}
