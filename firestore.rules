rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - for storing user data, preferences, and progress
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Admin (guythatlives@protonmail.com) can read all users
      allow read: if request.auth != null && request.auth.token.email == 'guythatlives@protonmail.com';

      // Admin can delete any user
      allow delete: if request.auth != null && request.auth.token.email == 'guythatlives@protonmail.com';
    }

    // Schools collection - for create-your-school feature
    match /schools/{schoolId} {
      // Allow authenticated users to create schools
      allow create: if request.auth != null;

      // Allow reading if:
      // - User is owner (createdBy matches)
      // - User is a member of the school
      // - School is public/visible
      // - User is admin
      allow read: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        request.auth.uid in resource.data.members ||
        resource.data.visibility == 'public' ||
        request.auth.token.email == 'guythatlives@protonmail.com'
      );

      // Allow updates if user is owner or admin of the school
      allow update: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        request.auth.uid in resource.data.admins ||
        request.auth.token.email == 'guythatlives@protonmail.com'
      );

      // Allow delete only if user is owner
      allow delete: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        request.auth.token.email == 'guythatlives@protonmail.com'
      );
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
