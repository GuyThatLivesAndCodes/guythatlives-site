rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - for storing user data, preferences, and progress
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Admin (guythatlives@protonmail.com) can read all users
      allow read: if request.auth != null && request.auth.token.email == 'guythatlives@protonmail.com';

      // Admin can delete any user
      allow delete: if request.auth != null && request.auth.token.email == 'guythatlives@protonmail.com';
    }

    // Schools collection - for create-your-school feature
    match /schools/{schoolId} {
      // Allow authenticated users to create and manage schools
      allow create, write, update, delete: if request.auth != null;

      // Allow anyone to read schools (for browsing)
      allow read: if true;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
